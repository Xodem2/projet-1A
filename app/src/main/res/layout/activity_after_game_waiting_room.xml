<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AfterGameWaitingRoomActivity">

    <TextView
        android:id="@+id/afterGameWaitingRoomStatusFillId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="100dp"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/player1_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="76dp"
        tools:layout_editor_absoluteY="211dp" />

    <TextView
        android:id="@+id/player1_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="228dp"
        tools:layout_editor_absoluteY="211dp" />

    <TextView
        android:id="@+id/player2_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="87dp"
        tools:layout_editor_absoluteY="294dp" />

    <TextView
        android:id="@+id/player2_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="250dp"
        tools:layout_editor_absoluteY="294dp" />

    <ImageButton
        android:id="@+id/quit_score_screen"
        android:layout_width="144dp"
        android:layout_height="76dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/button_quit"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="639dp" />
</androidx.constraintlayout.widget.ConstraintLayout>