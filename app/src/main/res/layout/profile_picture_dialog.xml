<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:contentPadding="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="700dp"
        android:layout_height="900dp">


        <ScrollView
            android:background="@drawable/background_profil"
            android:id="@+id/scrollView3"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/profilePageAvatar1Id"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginBottom="50dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/avatar1_2" />

                <ImageView
                    android:id="@+id/profilePageAvatar2Id"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginBottom="50dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/avatar1_3" />
                <ImageView
                    android:id="@+id/profilePageAvatar3Id"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginBottom="50dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/avatar_tracer" />

                <ImageView
                    android:id="@+id/profilePageAvatar4Id"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginBottom="50dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/mascotte3_1" />



            </LinearLayout>
        </ScrollView>


        <ScrollView
            android:id="@+id/scrollView4"
            android:layout_width="180dp"
            android:layout_height="fill_parent"
            android:layout_marginEnd="880dp"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/scrollView3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/profilePageFrame1Id"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginBottom="50dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/frame_bromze" />

                <ImageView
                    android:id="@+id/profilePageFrame2Id"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginBottom="50dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/frame_silver" />

                <ImageView
                    android:id="@+id/profilePageFrame3Id"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginBottom="50dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/frame_gold" />


                <ImageView
                    android:id="@+id/profilePageFrame4Id"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginBottom="50dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/frame_diamond" />

            </LinearLayout>
        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>