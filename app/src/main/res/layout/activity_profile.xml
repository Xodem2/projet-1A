<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/background_profil"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">


    <ImageButton
        android:id="@+id/profilePageSuccesButtonId"
        style="@android:style/Widget.Holo.ImageButton"
        android:layout_width="164dp"
        android:layout_height="60dp"
        android:layout_marginEnd="220dp"

        android:layout_marginBottom="36dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/button_succes" />

    <TextView
        android:id="@+id/profilePagePlayerIdFillId"
        android:layout_width="275dp"
        android:layout_height="21dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="28dp"
        android:text="123e4567-e89b-12d3-a456-556642440000"
        android:textAlignment="textStart"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilePageEditAgeId" />

    <EditText
        android:id="@+id/profilePageEditNicknameId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="pseudo"
        android:textAlignment="center"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/profilePageEditAgeId"
        app:layout_constraintStart_toStartOf="@+id/profilePageEditAgeId" />

    <EditText
        android:id="@+id/profilePageEditAgeId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:inputType="number"
        android:text="age"
        android:textAlignment="center"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/profilePagePlayerIdFillId"
        app:layout_constraintTop_toBottomOf="@+id/profilePageEditNicknameId" />

    <Button
        android:id="@+id/profilePageUpdateButtonId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="Mettre Ã  jour"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#B73A5D"
        app:iconTint="#6D3CC3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilePagePlayerIdFillId" />

    <Button
        android:id="@+id/profilePageGameStatsButtonId"
        android:layout_width="0dp"
        android:layout_height="51dp"
        android:layout_marginStart="156dp"
        android:layout_marginBottom="120dp"
        android:backgroundTint="@color/dark_blue"
        android:text="Stats de chaque jeu"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#673AB7"
        app:iconTint="#6D3CC3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="120dp"

        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        app:srcCompat="@drawable/avatar1_2" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="122dp"
        android:layout_height="122dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:srcCompat="@drawable/frame_bromze"
        tools:layout_editor_absoluteY="25dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/profilePageUpdateButtonId"
        app:layout_constraintEnd_toStartOf="@+id/profilePagePlayerIdFillId"
        app:srcCompat="@drawable/xpbar" />

    <ProgressBar
        android:id="@+id/profilePageProgressBarId"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="114dp"
        android:layout_height="10dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView5" />

</androidx.constraintlayout.widget.ConstraintLayout>